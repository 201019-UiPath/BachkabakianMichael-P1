@model JerkyCentralWeb.Models.Location
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Welcome Back!</h1>
    <p>Which Location Do You Want To View?</p>
</div>

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-black-50">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <div class="px-2">
                        <form asp-action="ManagerOptions" class="justify-content-center">
                            <label for="locations">Choose a Location:</label>
                            <select class="form-control" asp-for="LocationName" asp-items="ViewBag.locationOptions">
                                <option value="austin">Austin</option>
                                <option value="dallas">Dallas</option>
                            </select>
                            <br><br>
                            <input type="submit" value="Submit" class="btn btn-primary shadow-lg">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>