@model JerkyCentralWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "ManagerLogin";
}

<div class="text-center">
    <h1 class="display-4">Manager Login</h1>
    <p>Sign In Below.</p>
</div>

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-black-50">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <div class="px-2">
                        <form asp-action="ManagerLogin" class="justify-content-center">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" type="text" class="form-control shadow-lg" id="Name" aria-describedby="emailHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="PassWord"></label>
                                <input asp-for="PassWord" type="password" class="form-control shadow-lg" id="password">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Sign in" class="btn btn-primary shadow-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>